@model Seating.ViewModels.ListsVM 

@{
    var dt = DateTime.Now;
    List<string> timesOver = Seating.LunchesController.getTimesOver();
}

<h3 style="margin-left:7rem;">Override</h3>
<h5 style="font-family: 'Alegreya Sans SC'; color:red; margin-left:2.5rem">Double or 0500-0800 lunches</h5>
<h5 style="font-family: 'Alegreya Sans SC'; color:red; margin-bottom:1rem">with supervisor or lead Permission only</h5>

<form asp-controller="Home" asp-action="CreateLunchPage" class="DthdropdownGroup ml-3">
    <div class="btn-group" style="margin-left:.3rem;">
        <select class="form-group btn- btn-sm dropdown-toggle d-inline-block pr-1 btn-outline-light" style="color:black; font-family: 'Roboto', sans-serif; font-size: 16px; width: 8.5em; padding-left: .2rem; background-color: whitesmoke" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="EmployeeId" asp-for="EmployeeId">
            <option>Dispatcher</option>
            @foreach (var item in Model.Employees)
            {
                <option class="dropdown-item pr-1 form-control" value="@item.Id">@item.DisplayName</option>
            }
        </select>
    </div>

    <div class="btn-group">
        <select class="form-group btn-sm dropdown-toggle d-inline-block btn-outline-light" style="color:black; font-family: 'Roboto', sans-serif; width: 8.5em; font-size: 16px; background-color: whitesmoke" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="EmpPosition" asp-for="EmpPosition">
            <option>Position</option>
            @foreach (var item in Model.Positions)
            {
                <option value="@item.Id">@item.PositionName</option>
            }
        </select>
    </div>

    <div class="btn-group">
        <select class="form-group btn-sm d-inline-block btn-outline-light" style="color:black; margin-top: -.5rem; width: 12.5em; font-size: 16px; font-family: 'Roboto', sans-serif; text-align:center; background-color: whitesmoke;" type="button" aria-haspopup="true" aria-expanded="false" asp-for="LunchTime">
            <option style="text-align:center">Lunch Time</option>
            @foreach (var item in timesOver)
            {
                <option vale=@item>@item</option>
            }
        </select>
    </div>

    <div class="btn-group" style="margin-top:-2rem;">
        45<input style="margin-left:.2rem; margin-top: .4rem;" type="checkbox" id="flexCheckChecked" asp-for="LongerLunch">
    </div>
        <div class="btn-group" style="margin-top:-2rem;">
        Dbl<input style="margin-left:.2rem; margin-top: .4rem;" type="checkbox" id="flexCheckChecked" asp-for="DblLunch">
    </div>

    <button type="submit" class="dropdownStyling btn btn-sm btn-block btn-outline-light" style="margin-left:-.5rem; margin-bottom: .5rem; width: 19rem; margin-top:-.5rem">Submit</button>
</form>